@model ShopApplication.Models.CheckMobileDto

@{
    ViewData["Title"] = "CheckMobile";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<div class="wrap-account-pic col-lg-6 col-md-6 hidden-sm hidden-xs" style="background-image: url(../../Images/Site/Forget.png)">

</div>


    <div class="account-form col-lg-6 col-md-6 col-sm-12 col-xs-12">
        <span class="account-form-title">
            دریافت کد تائید
        </span>
        <form asp-action="CheckMobile">
            <div class="wrap-input-account">
                <div class="form-group">
                    <input asp-for="Mobile" type="number" class="input-account" placeholder="شماره موبایل" />
                    <span class="focus-account"></span>
                    <span asp-validation-for="Mobile" class="text-danger"></span>

                </div>
                

            </div>
            <div class="container-button">
                <button class="account-button" type="submit">
                    دریافت کد 
                </button>
            </div>
        </form>
        
    </div>

