@model IEnumerable<ShopApplication.DataLayer.Entities.FactorDetail>
@{ 
    int rowCount = 1;
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
}
<div>
    <h2 class="fa-pull-right" style="margin-top:40px;">نمایش سبد خرید</h2>
</div>

<div class="col-lg-10 col-md-10 col-sm-10 col-12">
    <table class="table table-hover table-striped">
        <thead>
            <tr>
                <th>ردیف</th>
                <th>نام محصول</th>
                <th>قیمت</th>
                <th>تعداد</th>
                <th>عملیات</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@rowCount</td>
                    <td>@item.Product.Name</td>
                    <td>@item.Product.Price.ToString("n0") ریال</td>
                    <td>@item.ProductCount</td>
                    <td>
                        <a href="/Profile/Delete/@item.Id" class="btn btn-danger"><i class="fa fa-trash"></i></a>
                    </td>
                </tr>
                rowCount++;
            }
        </tbody>
    </table>
    <a href="/Profile/ShowFactor" class="btn btn-success btn-block">تکمیل و ادامه فرآیند خرید</a>
</div>