@page "{id}"
@model ShopApplication.Pages.Admin.Users.DetailModel
@{
}
<div class="row">

    <div class="col-md-12" style="margin-top:20px">
        <div>
            <h4 class="fa-pull-right">نمایش آدرس ها</h4>

        </div>
    </div>
</div>
<div class="clearfix"></div>
<hr />
<div class=" table-responsive table-full-width fa-pull-right">
    @{
        int rowCount = 1;
    }
    <table class="table table-hover table-striped">
        <thead>
            <tr>
                <th>ردیف</th>
                <th>استان</th>
                <th>شهر</th>
                <th>آدرس</th>
                <th>کد پستی</th>


            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Addresses)
            {
                <tr>
                    <td>@rowCount</td>
                    <td>@item.City.State.Name</td>
                    <td>@item.City.Name</td>
                    <td>@item.AddressText</td>
                    <td>@item.PostalCode</td>

                </tr>
                rowCount++;
            }
        </tbody>
    </table>
</div>