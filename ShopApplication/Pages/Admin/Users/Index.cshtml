@page
@model ShopApplication.Pages.Admin.Users.IndexModel
@{
}
<div class="row">

    <div class="col-md-12" style="margin-top:20px">
        <div>
            <h4 class="fa-pull-right">نمایش کاربران</h4>
            <h4 class="fa-pull-left">
                <a class="btn btn-success" href="/Admin/Users/Create">افزودن کاربر</a>
            </h4>
        </div>
    </div>
</div>
<div class="clearfix"></div>
<hr />
<div style="margin-bottom:30px;">
    <form>
        <div class="col-lg-3 col-md-4 col-sm-5 col-xs-8 form-inline">
            <div class="form-group">
                <input type="text" class="form-control" placeholder="جست و جو ..." name="strsearch" />
                &nbsp;
                <input type="submit" class="btn btn-success " value="جست و جو" />
            </div>
        </div>
    </form>
</div>
<div class=" table-responsive table-full-width fa-pull-right">
    @{
        int rowCount = 1;
    }
    <table class="table table-hover table-striped">
        <thead>
            <tr>
                <th>ردیف</th>
                <th>نام کاربری</th>
                <th>نقش کاربر</th>
                <th>فعال/غیرفعال</th>
                <th>عملیات</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.users)
            {
                <tr>
                    <td>@rowCount</td>
                    <td>@item.Mobile</td>
                    <td>@item.Role.RoleTitle</td>
                    @if (item.IsActive)
                    {
                        <td><input type="checkbox" value="@item.IsActive" checked disabled /></td>
                    }
                    else
                    {
                        <td><input type="checkbox" value="@item.IsActive" disabled /></td>
                    }
                    <td>
                        <a href="/Admin/Users/Edit/@item.Id" class="btn btn-warning fa-xs">
                            <i class="fa fa-edit"></i>
                        </a>
                        <a href="/Admin/Users/Delete/@item.Id" class="btn btn-danger fa-xs">
                            <i class="fa fa-trash"></i>
                        </a>
                        <a href="/Admin/Users/Detail/@item.Id" class="btn btn-info fa-xs">
                            <i class="fa fa-address-book"></i>
                        </a>
                    </td>
                </tr>
                rowCount++;
            }
        </tbody>
    </table>
</div>