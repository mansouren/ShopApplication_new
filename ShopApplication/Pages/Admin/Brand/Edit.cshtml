@page "{id}"
@model ShopApplication.Pages.Admin.Brand.EditModel

<div><h2>ویرایش برند</h2></div>
<hr />
<form method="post" enctype="multipart/form-data">
    <input asp-for="brandDto.ImageName" type="hidden" />
    <input asp-for="brandDto.Id" type="hidden" />

    <div class="col-md-12 col-sm-8 ">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="brandDto.Title">نام برند</label>
            <input asp-for="brandDto.Title" class="form-control" />
            <span asp-validation-for="brandDto.Title" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="brandDto.Order">ترتیب نمایش</label>
            <input asp-for="brandDto.Order" min="1" class="form-control" />
            <span asp-validation-for="brandDto.Order" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="brandDto.ImageFile">آیکون</label>
            <input asp-for="brandDto.ImageFile" type="file" />
            <span asp-validation-for="brandDto.ImageFile" class="text-danger"></span>
        </div>
        <br />

        <img src="~/Images/Brands/thumb/@Model.brandDto.ImageName" alt="تصویری یافت نشد"
             class="img-fluid" style="margin:auto;" height="100" width="100" />
        <br />

        <div class="form-group">
            <label asp-for="brandDto.NotShow">عدم نمایش</label>
            <input asp-for="brandDto.NotShow" type="checkbox" />
            <span asp-validation-for="brandDto.NotShow" class="text-danger"></span>
        </div>


        <div class="form-group">
            <input class="btn btn-success " value="ذخیره" type="submit" />
            <a class="btn btn-danger " asp-page="Index">بازگشت</a>
        </div>
    </div>

</form>