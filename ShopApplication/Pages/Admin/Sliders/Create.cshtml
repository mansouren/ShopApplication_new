@page
@model ShopApplication.Pages.Admin.Sliders.CreateModel
@{
}
<div>
    <h2>افزودن اسلاید</h2>
</div>
<hr />
<form method="post" enctype="multipart/form-data">
    <div class="col-md-12 col-sm-8 ">

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="sliderDto.Title">عنوان اسلاید</label>
            <input asp-for="sliderDto.Title" class="form-control" />
            <span asp-validation-for="sliderDto.Title" class="text-danger"></span>
        </div>
       
        <div class="form-group">
            <label asp-for="sliderDto.Order">ترتیب نمایش</label>
            <input asp-for="sliderDto.Order" value="1" min="1" class="form-control" />
            <span asp-validation-for="sliderDto.Order" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="sliderDto.ImageFile">آیکون</label>
            <input asp-for="sliderDto.ImageFile" type="file" required />
           
        </div>
        <br />

        <div class="form-group">
            <label asp-for="sliderDto.NotShow">عدم نمایش</label>
            <input asp-for="sliderDto.NotShow" type="checkbox" />
            <span asp-validation-for="sliderDto.NotShow" class="text-danger"></span>
        </div>


        <div class="form-group">
            <input class="btn btn-success" value="ثبت" type="submit" />
            <a class="btn btn-danger " asp-page="Index">بازگشت</a>

        </div>
    </div>

</form>