@page "{id}"
@model ShopApplication.Pages.Admin.Factors.DetailModel
@{
}
<div class="row">

    <div class="col-md-12" style="margin-top:20px">
        <div>
            <h4 class="fa-pull-right">نمایش جزئیات سفارش</h4>

        </div>
    </div>
</div>
<div class="clearfix"></div>
<hr />

<div class=" table-responsive table-full-width fa-pull-right">
    @{
        int rowCount = 1;
    }
    <table id="myTable" class="table table-hover table-striped">
        <thead>
            <tr>
                <th>ردیف</th>
                <th>نام محصول</th>
                <th>تعداد</th>
                <th>مبلغ واحد</th>
              
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.FactorDetails)
            {
                <tr>
                    <td>@rowCount</td>
                    <td>@item.Product.Name</td>
                    <td>@item.ProductCount</td>
                    <td>@item.UnitPrice.ToString("n0") ریال</td>
                  
                </tr>
                rowCount++;
            }
        </tbody>
    </table>
</div>