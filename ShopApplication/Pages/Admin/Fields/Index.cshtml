@page
@model ShopApplication.Pages.Admin.Fields.IndexModel
@{
}
<div class="row">

    <div class="col-md-12" style="margin-top:20px;">
        <div>
            <h4 class="fa-pull-right">نمایش مشخصه ها</h4>
            <h4 class="fa-pull-left">
                <a class="btn btn-success" href="/Admin/Fields/Create">افزودن مشخصه</a>
            </h4>
        </div>
    </div>
</div>
<div class="clearfix"></div>
<hr />
<div class=" table-responsive table-full-width fa-pull-right">
    @{
        int rowCount = 1;
    }
    <table class="table table-hover table-striped">
        <thead>
            <tr>
                <th>ردیف</th>
                <th>نام مشخصه</th>
                <th>عملیات</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Feildlst)
            {
                <tr>
                    <td>@rowCount</td>
                    <td>@item.Name</td>
                    <td>
                        <a href="/Admin/Fields/Edit/@item.Id" class="btn btn-warning fa-xs">
                            <i class="fa fa-edit"></i>
                        </a>
                        <a href="#" onclick="myDelete('@item.Id')" class="btn btn-danger fa-xs">
                            <i class="fa fa-trash"></i>
                        </a>
                    </td>
                </tr>
                rowCount++;
            }
        </tbody>
    </table>
</div>

@section mySection{
    <script src="~/js/sweet.js"></script>
    <script>
        function myDelete(id) {
            swal({
                title: "تائید حذف",
                text: "آیا از حذف این مقدار اطمینان دارید ؟",
                icon: "warning",
                buttons: ["لغو", "بلی"],
                dangerMode: true,
            })
                .then((willDelete) => {
                    if (willDelete) {
                        window.open('/Admin/Fields/Delete/' + id, '_parent');
                    }
                });
        }
    </script>
}