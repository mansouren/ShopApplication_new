@page
@model ShopApplication.Pages.Admin.Group.IndexModel
@{
}
<div class="row">

    <div class="col-md-12" style="margin-top:20px;">
        <div>
            <h4 class="fa-pull-right">نمایش گروه ها</h4>
            <h4 class="fa-pull-left">
                <a class="btn btn-success" href="/Admin/Group/Create">افزودن گروه</a>
            </h4>
        </div>
    </div>
</div>
<div class="clearfix"></div>
<hr />
<div class=" table-responsive table-full-width fa-pull-right">
    @{
        int rowCount = 1;
    }
    <table class="table table-hover table-striped">
        <thead>
            <tr>
                <th>ردیف</th>
                <th>عنوان</th>
                <th>عدم نمایش</th>
                <th>ترتیب نمایش</th>
                <th>عملیات</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.groupDtos)
            {
                <tr>
                    <td>@rowCount</td>
                    <td>@item.Name</td>
                    @if (item.NotShow)
                    {
                        <td><input type="checkbox" value="@item.NotShow" checked disabled /></td>
                    }
                    else
                    {
                        <td><input type="checkbox" value="@item.NotShow" disabled /></td>
                    }

                    <td>@item.Order</td>
                    <td>
                        <a href="/Admin/Group/Edit/@item.Id" class="btn btn-warning fa-xs">
                            <i class="fa fa-edit"></i>
                        </a>
                        <a href="/Admin/Group/Delete/@item.Id" class="btn btn-danger fa-xs">
                            <i class="fa fa-trash"></i>
                        </a>
                    </td>
                </tr>
                rowCount++;
            }
        </tbody>
    </table>
</div>