@page
@model ShopApplication.Pages.Admin.Products.IndexModel
@{
}
<div class="row">

    <div class="col-md-12" style="margin-top:20px;">
        <div>
            <h4 class="fa-pull-right">نمایش محصولات</h4>
            <h4 class="fa-pull-left">
                <a class="btn btn-success" href="/Admin/Products/Create">افزودن محصول</a>
            </h4>
        </div>
    </div>
</div>
<div class="clearfix"></div>
<div style="margin-bottom:30px;">
    <form>
        <div class="col-lg-3 col-md-4 col-sm-5 col-xs-8 form-inline">
            <div class="form-group">
                <input type="text" class="form-control" placeholder="جست و جو ..." name="strsearch" />
                &nbsp;
                <input type="submit" class="btn btn-success " value="جست و جو" />
            </div>
        </div>
    </form>
</div>
<hr />
<div class=" table-responsive table-full-width fa-pull-right">
    @{
        int rowCount = 1;
    }
    <table class="table table-hover table-striped">
        <thead>
            <tr>
                <th>ردیف</th>
                <th>نام محصول</th>
                <th>برند</th>
                <th>گروه</th>
                <th>تصویر</th>
                <th>قیمت</th>
                <th>عملیات</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.products)
            {
            <tr>
                <td>@rowCount</td>
                <td>@item.Name</td>
                <td>@item.Brand.Title</td>
                <td>@item.Group.Name</td>
                <td><img class="img-fluid" width="100" height="100" src="~/Images/Product/@item.Img" /></td>
                <td>@item.Price.ToString("#,0 ریال")</td>
                <td>
                    <a href="/Admin/Products/Edit/@item.Id" class="btn btn-warning fa-xs">
                        <i class="fa fa-edit"></i>
                    </a>
                    <a href="/Admin/Products/Delete/@item.Id" class="btn btn-danger fa-xs">
                        <i class="fa fa-trash"></i>
                    </a>
                    <a href="/Admin/Galleries/Index/@item.Id" class="btn btn-primary fa-xs">
                        <i class="fa fa-images"></i>
                    </a>
                    <a href="/Admin/ProductField/Index/@item.Id" class="btn btn-dark fa-xs">
                        <i class="fa fa-list-ul"></i>
                    </a>
                </td>
            </tr>
                rowCount++;
            }
        </tbody>
    </table>
</div>